<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlayControls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- D-Pad at bottom-left -->
    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|start"
        android:src="@drawable/ic_dpad_up"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_dpad_down"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_dpad_left"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="48dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/ic_dpad_right"
        android:background="@android:color/transparent" />

    <!-- PS2 Buttons at bottom-right -->
    <ImageButton
        android:id="@+id/btnTriangle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_button_triangle"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnCircle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_button_circle"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnCross"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="80dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_button_cross"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnSquare"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="48dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_button_square"
        android:background="@android:color/transparent" />

    <!-- Analog sticks represented as SeekBars -->
    <SeekBar
        android:id="@+id/stickLeft"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center_vertical|start"
        android:progress="50"
        android:thumb="@drawable/ic_analog_thumb" />

    <SeekBar
        android:id="@+id/stickRight"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center_vertical|end"
        android:progress="50"
        android:thumb="@drawable/ic_analog_thumb" />

</FrameLayout>

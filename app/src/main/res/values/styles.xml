<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos para títulos de seção -->
    <style name="SectionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Linha divisória -->
    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ps2_dark_background</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Estilos para configurações -->
    <style name="SettingsSectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SettingsSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/ps2_dark_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Estilos para botões do PS2 -->
    <style name="PS2Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="FpsText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Button.PS2" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DpadButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/dpad_button_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SectionTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ps2_blue</item>
    </style>
    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ps2_dark_bg</item>
    </style>
    <style name="SettingsSectionTitle">@style/SectionTitle</style>
    <style name="SettingsSpinner">
        <item name="android:dropDownSelector">@color/ps2_dark_background</item>
    </style>
    <style name="SettingsSwitch">
        <item name="android:thumbTint">@color/ps2_blue</item>
        <item name="android:trackTint">@color/ps2_dark_background</item>
    </style>

</resources>

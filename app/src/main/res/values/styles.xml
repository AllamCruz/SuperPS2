<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos para títulos de seção -->
    <style name="SectionTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Linha divisória -->
    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ps2_dark_bg</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Estilos para configurações -->
    <style name="SettingsSectionTitle" parent="SectionTitle">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="SettingsSpinner">
        <item name="android:dropDownSelector">@color/ps2_dark_background</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:thumbTint">@color/primary</item>
        <item name="android:trackTint">@color/ps2_dark_background</item>
        <item name="android:trackTintMode">src_over</item>
    </style>

    <!-- Estilos para botões do PS2 -->
    <style name="PS2Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
